<html>
<head>
	<title>Auburn Mentoring - Update Profile</title>
	<link rel='stylesheet' href='css/profile.css' type='text/css'>
	<link type="text/javascript" src="server.js">
</head>
<body>
<div class="profileBox">
	
		<p>Enter information below that you would like to change.</p><br>
		<form action='/' method='POST'>

		<!-- Username -->
		<div class="userInfo">
			
			<label for='username'>Username: </label>
			<input type='text' name='username' value= '{{ username }}'> <!-- {{ variable}} is the variable pulled from the server -->
		
		</div>
		
		<!-- First Name -->
		<div class="userInfo">
			
			<label for='firstname'>First Name: </label>
			<input type='text' name='firstname' value= '{{ firstname }}'>

		</div>

		<!-- Last Name -->
		<div class="userInfo">
			
			<label for='lastname'>Last Name: </label>
			<input type='text' name='lastname' value= '{{ lastname }}'>

		</div>

		<!-- Email -->
		<div class="userInfo">
			
			<label for='email'>E-mail: </label>
			<input type='text' name='email'  value= '{{ email }}'>
		
		</div>
		
		<!-- Date of Birth -->
		<div class="userInfo">
			
			<label for='dob'>Birthday: </label>
			<input type='text' name='dob' value= '{{ dob }}'>
		
		</div>
		
		<!-- Password Change -->
		<div class="userInfo">
			
			<label for='oldpassword'>Old Password: </label>
			<input type='Password' name='oldpassword'>
		
		</div>

		<div class="userInfo">
			
			<label for='password1'>Change Password: </label>
			<input type='Password' name='password1'>
		
		</div>
		
		<div class="userInfo">
			
			<label for='password2'>Confirm Password: </leabel>
			<input type='Password' name='password2'>
		</div>
		
		<button type="submit" value = 'submit'>UPDATE</button>
		<button type="button" onclick="window.location.href='profile'">CANCEL</button>
		</form>
</div>
</body>
</html>